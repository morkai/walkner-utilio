<form class="users-form" method="post" action="<%- formAction %>" autocomplete="off">
  <input type="hidden" name="_method" value="<%- formMethod %>">
  <div class="panel panel-primary">
    <div class="panel-heading"><%- panelTitleText %></div>
    <div class="panel-body">
      <div class="row">
        <div class="col-lg-4">
          <div class="form-group">
            <label for="<%- idPrefix %>-login" class="control-label is-required"><%- t('users', 'PROPERTY:login') %></label>
            <input id="<%- idPrefix %>-login" class="form-control" type="text" name="login" required maxlength="50" autofocus>
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-password" class="control-label <%- editMode ? '' : 'is-required' %>"><%- t('users', 'PROPERTY:' + (editMode ? 'newPassword' : 'password')) %></label>
            <input id="<%- idPrefix %>-password" class="form-control" type="password" name="password" <%- editMode ? '' : 'required' %>>
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-password2" class="control-label <%- editMode ? '' : 'is-required' %>"><%- t('users', 'PROPERTY:password2') %></label>
            <input id="<%- idPrefix %>-password2" class="form-control" type="password" <%- editMode ? '' : 'required' %>>
            <% if (editMode) { %>
            <p class="help-block"><%- t('users', 'FORM:HELP:password') %></p>
            <% } %>
          </div>
        </div>
        <div class="col-lg-4">
					<div class="row">
						<div class="col-lg-6 form-group">
							<label for="<%- idPrefix %>-firstName" class="control-label"><%- t('users', 'PROPERTY:firstName') %></label>
							<input id="<%- idPrefix %>-firstName" class="form-control" type="text" name="firstName" maxlength="50">
						</div>
						<div class="col-lg-6 form-group">
							<label for="<%- idPrefix %>-lastName" class="control-label"><%- t('users', 'PROPERTY:lastName') %></label>
							<input id="<%- idPrefix %>-lastName" class="form-control" type="text" name="lastName" maxlength="50">
						</div>
					</div>
          <div class="form-group">
            <label for="<%- idPrefix %>-personnelId" class="control-label"><%- t('users', 'PROPERTY:personnelId') %></label>
            <input id="<%- idPrefix %>-personnelId" class="form-control" type="text" name="personnelId" maxlength="15">
          </div>
          <div class="form-group">
            <label for="<%- idPrefix %>-gender" class="control-label is-required"><%- t('users', 'PROPERTY:gender') %></label>
            <div>
              <% ['female', 'male'].forEach(function(gender) { %>
              <label class="radio-inline">
                <input type="radio" name="gender" value="<%- gender %>" required> <%- t('users', 'gender:' + gender) %>
              </label>
              <% }) %>
            </div>
          </div>
        </div>
        <div class="col-lg-4">
          <div class="form-group">
            <label for="<%- idPrefix %>-email" class="control-label"><%- t('users', 'PROPERTY:email') %></label>
            <input id="<%- idPrefix %>-email" class="form-control" type="email" name="email" maxlength="100">
          </div>
          <div class="form-group">
            <label class="control-label"><%- t('users', 'PROPERTY:mobile') %></label>
            <div id="<%- idPrefix %>-mobile-list"></div>
            <div id="<%- idPrefix %>-mobile" class="users-form-mobile">
              <input id="<%- idPrefix %>-mobile-number" class="form-control users-form-mobile-number" type="text" placeholder="+00 000 000 000">
              <span><%- t('users', 'FORM:mobile:from') %></span>
              <input id="<%- idPrefix %>-mobile-from" class="form-control users-form-mobile-hours" type="text" placeholder="00:00">
              <span><%- t('users', 'FORM:mobile:to') %></span>
              <input id="<%- idPrefix %>-mobile-to" class="form-control users-form-mobile-hours" type="text" placeholder="00:00">
              <button id="<%- idPrefix %>-mobile-add" class="btn btn-link" type="button"><i class="fa fa-plus"></i></button>
            </div>
          </div>
        </div>
      </div>
      <% if (!accountMode) { %>
      <div class="form-group">
        <label for="<%- idPrefix %>-privileges" class="control-label"><%- t('users', 'PROPERTY:privileges') %></label>
        <div class="input-group">
          <input id="<%- idPrefix %>-privileges" type="text" name="privileges" autocomplete="off">
          <span class="input-group-btn">
            <button id="<%- idPrefix %>-copyPrivileges" class="btn btn-default" type="button"><i class="fa fa-copy"></i></button>
          </span>
        </div>
      </div>
      <% } %>
    </div>
    <div class="panel-footer">
      <button type="submit" class="btn btn-primary"><%- formActionText %></button>
    </div>
  </div>
</form>
