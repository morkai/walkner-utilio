<div class="controls alarms-form-action alarms-form-action-message">
  <input type="hidden" name="<%- fieldNamePrefix %>.type" value="severity">
  <input class="alarms-form-action-severity" type="hidden" name="<%- fieldNamePrefix %>.severity" value="warning">
  <h5 class="alarms-form-action-header"><%- t('alarms', 'ACTION:severity:HEADER') %></h5>
  <%- t('alarms', 'ACTION:severity:DELAY') %>
  <div class="form-group alarms-form-action-delay-group">
    <div class="input-group">
      <input class="form-control alarms-form-action-delay" name="<%- fieldNamePrefix %>.delay" type="number" min="0" max="3600" step="0.1">
      <span class="input-group-addon">s</span>
    </div>
  </div>
  <%- t('alarms', 'ACTION:severity:TEXT') %>
</div>
